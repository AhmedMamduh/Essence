
    <!-- ##### Breadcumb Area Start ##### -->
    <div class="breadcumb_area bg-img" style="background-image: url(<%= asset_path('bg-img/breadcumb.jpg')%>;">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Favorites List</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Shop Grid Area Start ##### -->
    <section class="shop_grid_area section-padding-80">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-8 col-lg-9">
                    <div class="shop_grid_product_area">
                        <div class="row">
                            <div class="col-12">
                                <div class="product-topbar d-flex align-items-center justify-content-between">
                                    <!-- Total Products -->
                                    <div class="total-products">
                                        <p><span><%= current_user.favorites.count %></span> favorites products </p>
                                        <br>
                                        <p id="notice"><%= notice %></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <!-- Single Product -->
                            <% @favorites.each do |favorite| %>
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-wrapper">
                                    <!-- Product Image -->
                                    <div class="product-img">
                                      <%= image_tag(favorite.product.image_url) %>
                                    </div>

                                    <!-- Product Description -->
                                    <div class="product-description">
                                        <span><%= Category.find(favorite.product.category_id).name%></span>
                                            <h6><%= favorite.product.title %></h6>
                                        <p class="product-price"><%= number_to_currency(favorite.product.price, :unit => "EGP ") %></p>
                                        <%= link_to 'Remove', favorite, method: :delete, data: { confirm: 'Are you sure?' } %>
                                    </div>

                                </div>
                            </div> 
                            <% end %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Shop Grid Area End ##### -->

