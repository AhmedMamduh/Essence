<p id="notice"><%= notice %></p>


    <!-- ##### Breadcumb Area Start ##### -->
    <div class="breadcumb_area bg-img" style="background-image: url(<%= asset_path('bg-img/breadcumb.jpg')%>;">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>All Categories</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Shop Grid Area Start ##### -->
    <section class="shop_grid_area section-padding-80">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-4 col-lg-3">
                    <div class="shop_sidebar_area">

                        <!-- ##### Single Widget ##### -->
                        <div class="widget catagory mb-50">
                            <!-- Widget Title -->
                            <h6 class="widget-title mb-30">Catagories</h6>
                            <!--  Catagories  -->
                            <div class="catagories-menu">
                                <ul id="menu-content2" class="menu-content collapse show">
                                    <!-- Single Item -->

                                    <% @categories.each do |category| %>

                                    <li data-toggle="collapse">
                                        <%= link_to category.name , category  %></li>
                                    <% end %>

                                    <%= link_to 'New Category', new_category_path %>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-8 col-lg-9">
                    <div class="shop_grid_product_area">
                        <div class="row">
                            <div class="col-12">
                                <div class="product-topbar d-flex align-items-center justify-content-between">
                                    <!-- Total Products -->
                                    <div class="total-products">
                                        <p><span><%= Product.count %></span> products found</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <!-- Single Product -->
                            <% @products = Product.all %>
                            <% @products.each do |product| %>
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-wrapper">
                                    <!-- Product Image -->
                                    <div class="product-img">
                                      <%= image_tag(product.image_url) %>
                                        <!-- Favourite -->
                                        <div class="product-favourite">
                                            <%= link_to "", favorites_path(product_id: product.id), method: :post, remote: true, class: "favme fa fa-heart" %>
                                        </div>
                                    </div>

                                    <!-- Product Description -->
                                    <div class="product-description">
                                        <span><%= Category.find(product.category_id).name%></span>
                                            <h6><%= link_to product.title, product %></h6>
                                        <p class="product-price"><%= number_to_currency(product.price, :unit => "EGP ") %></p>
                                    </div>

                                </div>
                            </div> 
                            <% end %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Shop Grid Area End ##### -->

